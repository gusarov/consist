<Application x:Class="Consist.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Consist" xmlns:viewmodel="clr-namespace:Consist.ViewModel"
			 StartupUri="MainWindow.xaml"
             Startup="Application_Startup"
             >
    <Application.Resources>
		<viewmodel:BooleanToVisibilityConverter x:Key="btv"/>
		<viewmodel:ConvertDateTimeToLocal x:Key="TimeToLocal"/>
		<viewmodel:ConvertSizeToString x:Key="SizeConvert" />
		<viewmodel:ConvertSizeToStringOptions x:Key="SizeOptions"/>
		<Style TargetType="MenuItem" x:Key="Hide">
			<Style.Triggers>
				<Trigger Property="IsEnabled" Value="False">
					<Setter Property="Visibility" Value="Collapsed"/>
				</Trigger>
			</Style.Triggers>
		</Style>
	</Application.Resources>
</Application>
