<UserControl x:Class="Consist.View.Explorer"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
		xmlns:local="clr-namespace:Consist.View"
		xmlns:model="clr-namespace:Consist.Model;assembly=Consist.Model"
		mc:Ignorable="d" 
		d:DesignHeight="450" d:DesignWidth="800">
	<Grid>
		<TreeView ItemsSource="{Binding Records}">
			<TreeView.ItemTemplate>
				<HierarchicalDataTemplate DataType="{x:Type model:Record}" ItemsSource="{Binding SubRecords}">
					<StackPanel Orientation="Horizontal">
						<TextBlock Text="{Binding Name}" />
						<TextBlock>  </TextBlock>
						<TextBlock Text="{Binding FileSize}" />
					</StackPanel>
				</HierarchicalDataTemplate>
			</TreeView.ItemTemplate>
		</TreeView>
	</Grid>
</UserControl>
