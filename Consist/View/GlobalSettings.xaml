<UserControl x:Class="Consist.View.GlobalSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Consist.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Grid>
		<CheckBox>Include Hidden Files</CheckBox>
		<CheckBox>Show Compressed as Blue</CheckBox>
		<CheckBox>Show Encrypted as Green</CheckBox>
		<CheckBox>List Folders then Files</CheckBox>
		<CheckBox>Sort by name</CheckBox>
		<GroupBox Header="Files">
			<StackPanel>
				<RadioButton>Show Files and folders at the same level</RadioButton>
				<RadioButton>Show Files in a separate fake node</RadioButton>
				<RadioButton>Show files in a sub-grid</RadioButton>
			</StackPanel>
		</GroupBox>
	</Grid>
</UserControl>
