<UserControl x:Class="Consist.View.IndexStats"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:local="clr-namespace:Consist.View"
	mc:Ignorable="d" 
	d:DesignHeight="450"
	d:DesignWidth="800">
	<GroupBox Header="Index Statistics">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition />
				<RowDefinition />
				<RowDefinition />
			</Grid.RowDefinitions>
			<TextBlock Grid.Row="0" Grid.Column="0">Items Indexed:</TextBlock>
			<TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ItemsCount}"/>
			<TextBlock Grid.Row="1" Grid.Column="0">Index Size:</TextBlock>
			<TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Size}"/>
		</Grid>
	</GroupBox>
</UserControl>
